{
  "name": "worker-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Cloudflare Worker TypeScript Boilerplate for Node.js Projects",
  "license": "MIT",
  "author": "Munjal Dhamecha",
  "main": "dist/worker.js",
  "scripts": {
    "build": "npm run clean && wrangler build",
    "clean": "rimraf dist coverage worker",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "npm run lint -- --fix",
    "preview": "npm run clean && env-cmd wrangler preview",
    "preview:watch": "npm run preview -- --watch",
    "publish": "npm run clean && env-cmd wrangler publish",
    "release": "standard-version",
    "release:mock": "npm run release -- --dry-run",
    "test": "jest --detectOpenHandles --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^1.0.9",
    "@cloudflare/wrangler": "^1.9.2",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.9",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "dotenv-webpack": "^1.8.0",
    "env-cmd": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.8",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "service-worker-mock": "^2.0.5",
    "sort-package-json": "^1.44.0",
    "standard-version": "^8.0.0",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
