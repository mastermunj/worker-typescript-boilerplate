{
  "name": "worker-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Cloudflare Worker TypeScript Boilerplate for Node.js Projects",
  "license": "MIT",
  "author": "Munjal Dhamecha",
  "main": "dist/worker.js",
  "scripts": {
    "build": "npm run clean && wrangler build",
    "clean": "rimraf dist coverage worker",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "preview": "npm run clean && env-cmd wrangler preview",
    "preview:watch": "npm run preview -- --watch",
    "publish": "npm run clean && env-cmd wrangler publish",
    "release": "standard-version",
    "release:mock": "npm run release -- --dry-run",
    "test": "jest --detectOpenHandles --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.1.0",
    "@cloudflare/wrangler": "^1.13.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.28",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "dotenv-webpack": "^6.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.4",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "service-worker-mock": "^2.0.5",
    "sort-package-json": "^1.48.1",
    "standard-version": "^9.1.0",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.5",
    "webpack": "^5.22.0",
    "webpack-cli": "^4.5.0"
  }
}
