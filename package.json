{
  "name": "worker-typescript-boilerplate",
  "version": "0.0.0",
  "description": "Cloudflare Worker TypeScript Boilerplate for Node.js Projects",
  "license": "MIT",
  "author": "Munjal Dhamecha",
  "main": "dist/worker.js",
  "scripts": {
    "build": "npm run clean && wrangler build",
    "clean": "rimraf dist coverage worker",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "preview": "npm run clean && env-cmd wrangler preview",
    "preview:watch": "npm run preview -- --watch",
    "publish": "npm run clean && env-cmd wrangler publish",
    "release": "standard-version",
    "release:mock": "npm run release -- --dry-run",
    "test": "jest --detectOpenHandles --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230115.0",
    "@cloudflare/wrangler": "^1.20.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/jest": "^27.5.0",
    "@types/node": "^18.11.19",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dotenv-webpack": "^8.0.1",
    "env-cmd": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^26.8.7",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^26.6.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "rimraf": "^3.0.2",
    "service-worker-mock": "^2.0.5",
    "sort-package-json": "^2.3.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
